<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartTrade.Views.Carrito"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid BackgroundColor="White">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Barra de navegación -->
            <StackLayout Orientation="Horizontal" Margin="10,10,5,0" Grid.Row="0">
                <Button 
                    Text="&#xf053;" 
                    FontFamily="{StaticResource FontAwesomeSolid}"
                    FontSize="21"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    WidthRequest="50"
                    HeightRequest="50"
                    Clicked="BtnAtras_click"
                />
                <Button HorizontalOptions="EndAndExpand"
                    Text="&#xf007;" 
                    FontFamily="{StaticResource FontAwesomeSolid}"
                    FontSize="21"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    WidthRequest="50"
                    HeightRequest="50"
                    Clicked="BtnPerfil_click"
                />
            </StackLayout>

            <!-- Título de la página -->
            <StackLayout Grid.Row="1" Margin="20,20,0,0">
                <Label Text="Carrito de la compra" FontSize="Title" TextColor="Black" />
            </StackLayout>

            <!-- Contenido principal -->
            <ScrollView Grid.Row="2" Padding="20">
                <StackLayout x:Name="listaItems">
                    <!-- CONTENIDO MANEJADO POR CODIGO. NO BORRAR NADA -->
                </StackLayout>
            </ScrollView>

            <!-- Resumen de la compra y Botón de finalizar compra -->
            <StackLayout Grid.Row="3" Margin="20,20,20,20" VerticalOptions="EndAndExpand">
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Puntos obtenidos: " FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="" FontSize="Medium" FontAttributes="Bold" TextColor="Black" x:Name="label_puntosObtenidos"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Coste total: " FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
                            <Span Text="" FontSize="Medium" FontAttributes="Bold" TextColor="Black" x:Name="label_costeTotal"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Button Text="Finalizar compra" BorderColor="LightGray" BorderWidth="1" BackgroundColor="#f0f0f0" TextColor="Black" FontAttributes="Bold" Clicked="BtnFinalizarCompra_click" CornerRadius="10" Margin="0,20,0,0"/>
            </StackLayout>


        </Grid>
    </ContentPage.Content>
</ContentPage>
